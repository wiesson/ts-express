{
  "name": "ts-express",
  "version": "1.0.0",
  "main": "start.js",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "@types/supertest": "^2.0.3",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "prettier": "^1.7.4",
    "supertest": "^3.0.0",
    "ts-jest": "^21.1.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0"
  },
  "dependencies": {
    "@types/compression": "^0.0.34",
    "@types/express": "^4.0.39",
    "@types/morgan": "^1.7.35",
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "typescript": "^2.5.3"
  },
  "scripts": {
    "start": "node index.js",
    "prestart:prod": "tsc",
    "start:prod": "node dist/server.js",
    "format": "./node_modules/.bin/prettier --write --single-quote --trailing-comma es5 './?(src|test)/**/*.ts'",
    "test": "./node_modules/.bin/jest --forceExit",
    "dev": "nodemon --ext js,ts --watch 'src' start.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
